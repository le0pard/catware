.formError {
  position: absolute;
  right: 35px;
  top: 10px;
  z-index: 5;
  color: #fff;
  width: 150px;
  padding: 5px 10px;
  text-shadow: 0 1px 0 #9D1111;
  background-color: #E12121;
  border-radius: 4px;
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
}


.formError .arr {
    position: absolute;
    left: -5px;
    top: 50%;
    margin-top: -5px;
    width: 5px;
    height: 9px;
    background: url(<%= asset_path 'red-arrow.png' %>) no-repeat 0 50%;
}