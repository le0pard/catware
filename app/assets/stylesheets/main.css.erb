/* general */
html, body {
    height: 96%;
}

body {
    font: normal 12px/1.3 arial, sans-serif;
    color: #000;
}

::-moz-selection {
    background-color: #fea;
}

::selection {
    background-color: #fea;
}

a {
    color: #0052cc;
    text-decoration: underline;
}

a:hover {
  color: #444;
}

/* layout */
header, .content, .wrapper {
  width: 960px;
  margin: 0 auto;
}

div.page {
    min-height: 100%;
    position: relative;
}

header {
    position: relative;
    margin: 60px auto 56px;
    height: 40px;
}

.main {
    width: 640px;
    float: left;
}

aside {
    width: 200px;
    padding-left: 25px;
    float: right;
    border-left: 1px solid #f2f2f2;
}

aside p {
    margin-bottom: 20px;
}

footer {
    position: absolute;
    bottom: 0;
    width: 100%;
    overflow: hidden;
  padding: 15px 0 45px;
  border-top: 1px solid #ebebeb;
  color: #999;
}

footer p {
    float: right;
}

footer ul {
    float: left;
    line-height: 1;
}

footer li {
    display: inline;
    padding-left: 10px;
    margin-left: 7px;
    border-left: 1px solid #dedede;
}

footer li a {
    color: #999;
}

footer li:first-child {
    padding-left: 0;
    border-left: 0;
}

nav {
    position: absolute;
    left: 300px;
    top: 0;
}

nav ul {
    list-style-type: none;
}

nav li {
    display: inline;
    margin: 0 30px;
}

nav a {
    display: inline-block;
    color: #333;
    font-size: 14px;
    text-decoration: none;
    border-bottom: 2px solid transparent;
}

nav a:hover {
    border-bottom: 2px solid #333;
}

nav li.active a {
    border-bottom: 2px solid #3a93d6;
}

.lang {
    position: absolute;
    right: 0;
    top: 0;
    cursor: default;
}

.lang img {
    vertical-align: -1px;
}

.lang .current {
    padding-right: 10px;
    background: url(<%= asset_path 'arrow-down.png' %>) no-repeat right 6px;
}

.lang .current span {
    /* border-bottom: 1px dotted; */
    color: #a7a7a7;
}

.lang ul {
    display: none;
}

.lang:hover ul {
    display: block;
}

.lang li {
    margin-top: 3px;
}

.lang li a {
    text-decoration: none;
}

.content {
    padding-bottom: 140px;
}

.content:after {
    content: '';
    display: block;
    height: 0;
    overflow: hidden;
    clear: both;
}

.content .phone-img {
    float: left;
    position: relative;
}

.content .phone-img.right {
    float: right;
}

.content h1 {
    margin-bottom: 26px;
    font-size: 28px;
    color: #187cd1;
}

.content h2 {
    margin-bottom: 15px;
    font-size: 18px;
    text-align: left;
}

.content h1 + p {
    padding-right: 20px;
    margin-bottom: 30px;
}

.content h1.motto {
    position: relative;
    padding-top: 150px;
    margin-right: 40px;
    font-size: 58px;
    line-height: 1.1;
    color: #333;
}

.content h1.motto strong {
    font-weight: normal;
    color: #3992d6;
}

.markdown ul, ul.list {
    margin-left: 20px;
    margin-bottom: 30px;
}

.markdown li, ul.list li {
    padding-left: 20px;
    background: url(<%= asset_path 'bullet.png' %>) no-repeat 0 4px;
}

aside ul.list {
    margin-left: 0;
}

ul.list.featured li {
    padding-left: 0;
    background: none;
    margin-bottom: 20px;
    overflow: hidden;
}

ul.list.featured li img {
    float: left;
    margin-right: 10px;
}

/* projects */
.projects {
    overflow: hidden;
    margin-right: -24px;
    margin-bottom: -50px;
}

.projects li {
    width: 468px;
    float: left;
    margin-right: 24px;
    margin-bottom: 50px;
    text-align: center;
}

.projects p {
    padding: 0 5px 20px 0;
    text-align: left;
}

.project_link {
  color: #000000;
}

.project_link:hover {
  color: #187BD1;
}

/* project details */
.app-img {
    float: left;
    margin-right: 20px;
}

.screens {
    margin-right: -15px;
}

.screens li {
    float: left;
    margin: 0 15px 10px 0;
}

.screens li img,
.promo img {
    padding: 4px;
    border-width: 1px;
    border-style: solid;
    border-color: #f5f5f5 #c4c4c4 #c4c4c4 #f5f5f5;
    -moz-border-radius: 3px;
    -webkit-border-radius: 3px;
    border-radius: 3px;
    -moz-box-shadow: 1px 1px 2px #ddd;
    -webkit-box-shadow: 1px 1px 2px #ddd;
    box-shadow: 1px 1px 2px #ddd;
}

.pdf {
  display: inline-block;
  height: 30px;
  padding-left: 32px;
  text-decoration: none;
  background: url(<%= asset_path 'pdf.png' %>) no-repeat 0 0;
}

.pdf span {
  display: block;
  color: #333;
}

.pdf em {
  text-decoration: underline;
}

.promo {
  width: 164px;
  height: 96px;
  position: relative;
}

.promo a.movie span {
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  width: 164px;
  height: 96px;
  background: url(<%= asset_path 'movie-link.png' %>) no-repeat center center;
  text-indent: -9000px;
}

/* services */
.services li {
    overflow: hidden;
    padding: 25px 0;
    border-top: 1px solid #f2f2f2;
    list-style-type: none;
}

.services li:first-child {
    padding-top: 0;
    border-top: 0;
}

.services li .image {
    width: 320px;
    text-align: center;
}

.left {
    float: left;
}

.right {
    float: right;
}

/* app nav */
.app-nav {
    margin-bottom: 20px;
}

.app-nav li {
    height: 30px;
    font-size: 14px;
}

.app-nav li a {
    display: block;
    height: 30px;
    line-height: 30px;
    text-decoration: none;
    color: #999;
}

.app-nav li a:hover {
    color: #333;
}

.app-nav li.active a {
    padding-left: 35px;
    margin-left: -35px;
    text-shadow: 1px 1px 0 #4C92C4;
    background: #65bfff url(<%= asset_path 'app-nav-active.png' %>) no-repeat 0 0;
    color: #fff;
}

/* vcard */
.vcard {
    margin-bottom: 20px;
}

.vcard .org,
.vcard .email,
.vcard .tel,
.vcard .im,
.vcard .adr {
    display: block;
    height: 30px;
    padding-left: 35px;
    line-height: 30px;
    background: url(<%= asset_path 'icons.png' %>) no-repeat 0 3px;
}

.vcard .email {
    background-position: 0 -30px;
}

.vcard .tel {
    background-position: 0 -62px;
}

.vcard .im {
    background-position: 0 -96px;
}

.vcard .title {
    color: #999;
}

.vcard .org,
.vcard .tel .type {
    display: none;
}

/* forms */
input, textarea, select {
  padding: 1px;
  font: 12px arial, sans-serif;
}

.line {
    padding: 10px 0;
    position: relative;
}

.line label {
    width: 85px;
    float: left;
    margin-right: 10px;
    padding-top: 5px;
    text-align: right;
}

.line input, textarea {
    width: 310px;
    max-width: 310px;
    padding: 5px;
    border: 1px solid #ccc;
}

.line input[type="text"]:focus,
.line input[type="email"]:focus,
textarea:focus {
    border-color: #187cd1;
    -moz-box-shadow: 0 0 2px #187cd1;
    -webkit-box-shadow: 0 0 2px #187cd1;
    box-shadow: 0 0 2px #187cd1;
}

.submit {
    padding: 10px 0 10px 95px;
}

.submit input {
    padding: 5px 20px;
}

textarea {
    height: 90px;
    overflow: auto;
}

dt {
    margin-bottom: 10px;
}

.req {
    color: #d22121;
}

.p404 {
    margin-top: 140px;
    text-align: center;
}

.h_not_found {
  font-size: 57px;
  color: #333;
}

.h_not_found span {
  color: #3992D6;
}

.qrcode{
  padding: 2px;
  border: 1px solid #cccccc;
}

.padding_right_little {
  padding-right: 24px;
}


.small_android {
  background: url(<%= asset_path 'small_android.png' %>) no-repeat 0 0;
  width: 320px; 
  height: 440px;
}

.small_android img{
  padding-top: 48px;
}

.big_android {
  background: url(<%= asset_path 'big_android.png' %>) no-repeat 0 0;
  width: 370px; 
  height: 540px;
  float: left;
}

.big_android img{
  padding-top: 60px;
  padding-left: 78px;
}

.main_link {
    color: #0052cc;
    text-decoration: none;
}

.main_link:hover {
  color: #0052cc;
}

.client-login {
    position: absolute;
    right: 0;
    top: 0;
    padding: 5px 0 5px 25px;
    color: #333;
    background: url(<%= asset_path 'basecamp.png' %>) no-repeat 0 50%;
}

/* team */
.team li {
    overflow: hidden;
    padding: 20px 0;
    margin-bottom: 0;
    border-top: 1px solid #f2f2f2;
}

.team li h2 {
    margin-bottom: 5px;
}

.team li:first-child {
    border-top: 0;
    padding-top: 0;
}

.team img {
    margin-right: 20px;
}

.col1 {
    width: 160px;
    margin-right: 40px;
}

/* slideshow */
#slideshow { 
  width: 940px;
  height: 450px;
  background: #000 url('<%= asset_path 'vendors/orbit/loading.gif' %>') no-repeat center center; 
  overflow: hidden; 
}
#slideshow img, #slideshow div { display: none; }
#slideshow .slide {
  width: 900px;
  height: 450px;
  background: #000 url('<%= asset_path 'vendors/orbit/coffee.jpg' %>') no-repeat center center; 
}
#slideshow .motto {
  margin: 0 100px;
}
