<%= content_for(:title, @project.title) %>

<section class="main">
  <h1><%=@project.title%></h1>
  <div class="markdown">
    <%=raw(@project.full_description_markdown)%>
  </div>
  <% if @project.logo_img? %>
    <div>
      <%=image_tag @project.logo_img.url(:main), :alt => @project.title, :class => "app-img" %>
    </div>
  <% end %>
  <ul class="screens">
    <li><a href="#"><%=image_tag "app-screen.jpg", :alt => ""%></a></li>
