source 'http://rubygems.org'

gem 'rails', '3.1.0'

# Bundle edge Rails instead:
# gem 'rails',     :git => 'git://github.com/rails/rails.git'

gem 'sqlite3'
gem 'pg'
gem 'rvm'
gem 'thin'

# Asset template engines
gem 'json'
gem 'paperclip'
gem 'kaminari'
gem 'settingslogic'
gem 'therubyracer'
gem 'nested_set'
gem 'dynamic_form'
gem 'rdiscount', :require => 'rdiscount'
gem "friendly_id"

group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

gem "sprockets", :git => "git://github.com/sstephenson/sprockets.git"
gem 'execjs'
gem 'jquery-rails'

group :development, :test do
  gem 'web-app-theme'
end

group :capistrano do
  gem 'net-ssh'
  gem 'capistrano'
  gem 'capistrano-ext', :require => 'capistrano/ext/multistage'
end

